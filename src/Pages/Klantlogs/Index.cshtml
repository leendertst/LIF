@page
@model Lif.Pages.Klantlogs.IndexModel
@using System.Globalization
@using Lif.Models
@{
    ViewData["Title"] = "Klantlogs";
}

<div class="page-header mb-4">
    <h1><i class="bi bi-clipboard-check"></i> Klantlogs</h1>
</div>

<div class="row mb-4">
    <div class="col-md-8">
        <a asp-page="Create" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Nieuwe klantlog aanmaken
        </a>
    </div>
</div>

<!-- Filter sectie -->
<div class="card mb-4">
    <div class="card-body">
        <form method="get" class="row g-3">
            <div class="col-md-4">
                <label for="statusFilter" class="form-label">
                    <i class="bi bi-funnel"></i> Filter op status
                </label>
                <select class="form-select" id="statusFilter" name="StatusFilter">
                    <option value="">Alle statussen</option>
                    <option value="@KlantlogStatus.Concept" selected="@(Model.StatusFilter == KlantlogStatus.Concept)">
                        Concept
                    </option>
                    <option value="@KlantlogStatus.Definitief" selected="@(Model.StatusFilter == KlantlogStatus.Definitief)">
                        Definitief
                    </option>
                    <option value="@KlantlogStatus.Afgerond" selected="@(Model.StatusFilter == KlantlogStatus.Afgerond)">
                        Afgerond
                    </option>
                    <option value="@KlantlogStatus.Geannuleerd" selected="@(Model.StatusFilter == KlantlogStatus.Geannuleerd)">
                        Geannuleerd
                    </option>
                </select>
            </div>
            
            @if (Model.IsAdmin)
            {
                <div class="col-md-6">
                    <label for="searchUserId" class="form-label">
                        <i class="bi bi-person"></i> Filter op klant
                    </label>
                    <input type="text" 
                           class="form-control" 
                           id="searchUserId"
                           name="SearchUserId" 
                           value="@Model.SearchUserId"
                           placeholder="Klant ID...">
                </div>
            }
            
            <div class="col-md-2 d-flex align-items-end">
                <button type="submit" class="btn btn-primary w-100">
                    <i class="bi bi-funnel"></i> Toepassen
                </button>
            </div>
        </form>
        
        @if (Model.StatusFilter.HasValue || !string.IsNullOrEmpty(Model.SearchUserId))
        {
            <div class="mt-3">
                <a asp-page="Index" class="btn btn-sm btn-outline-secondary">
                    <i class="bi bi-x-circle"></i> Filters wissen
                </a>
            </div>
        }
    </div>
</div>

<!-- Klantlogs lijst -->
<div class="row">
    @if (Model.Klantlogs.Any())
    {
        @foreach (var klantlog in Model.Klantlogs)
        {
            var statusBadge = klantlog.Status switch
            {
                KlantlogStatus.Concept => "bg-secondary",
                KlantlogStatus.Definitief => "bg-success",
                KlantlogStatus.Afgerond => "bg-info",
                KlantlogStatus.Geannuleerd => "bg-danger",
                _ => "bg-secondary"
            };

            var calendar = CultureInfo.CurrentCulture.Calendar;
            var weekRule = CalendarWeekRule.FirstFourDayWeek;
            var firstDayOfWeek = DayOfWeek.Monday;

            <div class="col-md-6 col-lg-4 mb-4">
                <div class="card h-100">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <span>
                            <i class="bi bi-calendar-week"></i>
                            Week @klantlog.WeekNummer - @klantlog.Jaar
                        </span>
                        <span class="badge @statusBadge">@klantlog.Status</span>
                    </div>
                    <div class="card-body">
                        @if (Model.IsAdmin)
                        {
                            <p class="mb-2">
                                <i class="bi bi-person"></i>
                                <strong>Klant:</strong> @klantlog.User.Email
                            </p>
                        }
                        
                        <p class="mb-2">
                            <i class="bi bi-calendar"></i>
                            <strong>Datum:</strong> @klantlog.Datum.ToString("dd-MM-yyyy")
                        </p>
                        
                        <p class="mb-2">
                            <i class="bi bi-box-seam"></i>
                            <strong>Producten:</strong> @klantlog.KlantlogProducten.Count
                        </p>
                        
                        <p class="mb-2">
                            <i class="bi bi-currency-euro"></i>
                            <strong>Totaal:</strong> @klantlog.TotaalPrijs.ToString("C")
                        </p>
                        
                        @if (!string.IsNullOrEmpty(klantlog.Opmerkingen))
                        {
                            <p class="mb-2 text-muted small">
                                <i class="bi bi-chat-left-text"></i>
                                @klantlog.Opmerkingen
                            </p>
                        }
                    </div>
                    <div class="card-footer">
                        <div class="d-flex gap-2">
                            <a asp-page="Details" asp-route-id="@klantlog.Id" class="btn btn-sm btn-info flex-fill">
                                <i class="bi bi-eye"></i> Bekijken
                            </a>
                            
                            @if (klantlog.Status == KlantlogStatus.Concept)
                            {
                                <a asp-page="Edit" asp-route-id="@klantlog.Id" class="btn btn-sm btn-warning">
                                    <i class="bi bi-pencil"></i>
                                </a>
                                
                                <form method="post" asp-page-handler="Maakdefinitief" asp-route-id="@klantlog.Id" class="d-inline">
                                    <button type="submit" class="btn btn-sm btn-success" 
                                            onclick="return confirm('Weet je zeker dat je deze klantlog definitief wilt maken?')">
                                        <i class="bi bi-check-circle"></i>
                                    </button>
                                </form>
                            }
                        </div>
                    </div>
                </div>
            </div>
        }
    }
    else
    {
        <div class="col-12">
            <div class="alert alert-info">
                <i class="bi bi-info-circle me-2"></i>
                Geen klantlogs gevonden. 
                <a asp-page="Create" class="alert-link">Maak er een aan!</a>
            </div>
        </div>
    }
</div>