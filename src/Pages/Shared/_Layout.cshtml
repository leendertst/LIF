@using Lif.Models
@using Microsoft.AspNetCore.Identity
<!DOCTYPE html>
<html lang="nl">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - LIF Group</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/index.min.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
</head>
<body>
    @if (SignInManager.IsSignedIn(User))
    {
        <!-- Layout met sidebar voor ingelogde gebruikers -->
        <div class="d-flex">
            <partial name="_Sidebar" />
            <div class="content-with-sidebar flex-grow-1 d-flex flex-column min-vh-100">
                <partial name="_Navbar" />
                <main class="container-fluid p-4 flex-grow-1">
                    @RenderBody()
                </main>
                <partial name="_Footer" />
            </div>
        </div>
    }
    else
    {
        <!-- Standaard layout voor niet-ingelogde gebruikers -->
        <div class="d-flex flex-column min-vh-100">
            <partial name="_Navbar" />
            <main class="container py-4 flex-grow-1">
                @RenderBody()
            </main>
            <partial name="_Footer" />
        </div>
    }

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager