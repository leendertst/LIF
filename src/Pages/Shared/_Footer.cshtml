@using Microsoft.AspNetCore.Identity
@using Lif.Models

@inject SignInManager<ApplicationUser> SignInManager

<footer class="footer-lif @(!SignInManager.IsSignedIn(User) ? "pt-4" : "")">
    <div class="container">
        @if (!SignInManager.IsSignedIn(User))
        {
            <div class="row">
                <div class="col-md-4 footer-section">
                    <h5>Over LIF Group</h5>
                    <p>Met de beste verse kruiden werken aan een groenere en gezondere samenleving.</p>
                    <div class="social-links">
                        <a href="#" aria-label="Facebook">
                            <i class="bi bi-facebook"></i>
                        </a>
                        <a href="#" aria-label="LinkedIn">
                            <i class="bi bi-linkedin"></i>
                        </a>
                        <a href="#" aria-label="Instagram">
                            <i class="bi bi-instagram"></i>
                        </a>
                    </div>
                </div>

                <div class="col-md-4 footer-section">
                    <h5>Ontdek</h5>
                    <ul>
                        <li><a href="https://www.debesteversekruiden.nl/lif-group">Home</a></li>
                        <li><a href="https://www.debesteversekruiden.nl/contactus">Contact</a></li>
                    </ul>
                </div>

                <div class="col-md-4 footer-section">
                    <h5>Contact</h5>
                    <ul class="list-unstyled">
                        <li>
                            <i class="bi bi-envelope"></i>
                            <a href="mailto:info@lifgroup.nl">info@lifgroup.nl</a>
                        </li>
                        <li>
                            <i class="bi bi-telephone"></i>
                            <a href="tel:+31682768189">+31 6 82 76 81 89</a>
                        </li>
                        <li>
                            <i class="bi bi-geo-alt"></i>
                            Apeldoorn, Nederland
                        </li>
                    </ul>
                </div>
            </div>
        }
        <div class="footer-bottom @(!SignInManager.IsSignedIn(User) ? "mt-4" : "")">
            <p>&copy; @DateTime.Now.Year LIF Group - Alle rechten voorbehouden</p>
        </div>
    </div>
</footer>