@page
@model Lif.Pages.Admin.Users.CreateModel
@{
    ViewData["Title"] = "Nieuwe gebruiker";
}

<div class="page-header mb-4">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a asp-page="Index">
                    <i class="bi bi-people-fill"></i> Gebruikers
                </a>
            </li>
            <li class="breadcrumb-item active" aria-current="page">Nieuwe gebruiker</li>
        </ol>
    </nav>
    <h1><i class="bi bi-person-plus"></i> Nieuwe gebruiker aanmaken</h1>
</div>

<div class="row">
    <div class="col-md-8 col-lg-6">
        <div class="card">
            <div class="card-header bg-primary text-white">
                <h5 class="mb-0">
                    <i class="bi bi-person-badge"></i> Gebruikersinformatie
                </h5>
            </div>
            <div class="card-body">
                <form method="post">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                    <div class="mb-3">
                        <label asp-for="Input.Email" class="form-label">
                            <i class="bi bi-envelope"></i> @Html.DisplayNameFor(m => m.Input.Email)
                        </label>
                        <input asp-for="Input.Email" class="form-control" placeholder="naam@voorbeeld.nl" autofocus />
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Input.Password" class="form-label">
                            <i class="bi bi-lock"></i> @Html.DisplayNameFor(m => m.Input.Password)
                        </label>
                        <input asp-for="Input.Password" type="password" class="form-control" placeholder="Minimaal 6 tekens" />
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                        <div class="form-text">
                            <i class="bi bi-info-circle"></i> 
                            Het wachtwoord moet minimaal 6 tekens bevatten.
                        </div>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Input.ConfirmPassword" class="form-label">
                            <i class="bi bi-lock-fill"></i> @Html.DisplayNameFor(m => m.Input.ConfirmPassword)
                        </label>
                        <input asp-for="Input.ConfirmPassword" type="password" class="form-control" placeholder="Herhaal wachtwoord" />
                        <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                    </div>

                    <div class="mb-4">
                        <label asp-for="Input.Role" class="form-label">
                            <i class="bi bi-shield-check"></i> @Html.DisplayNameFor(m => m.Input.Role)
                        </label>
                        <select asp-for="Input.Role" class="form-select" asp-items="Model.AvailableRoles">
                            <option value="">-- Selecteer een rol --</option>
                        </select>
                        <span asp-validation-for="Input.Role" class="text-danger"></span>
                        <div class="form-text">
                            <i class="bi bi-info-circle"></i> 
                            <strong>Administrator:</strong> Volledige toegang tot het systeem.<br />
                            <strong>Gebruiker:</strong> Standaard gebruikerstoegang.
                        </div>
                    </div>

                    <hr class="my-4" />

                    <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                        <a asp-page="Index" class="btn btn-secondary">
                            <i class="bi bi-x-circle"></i> Annuleren
                        </a>
                        <button type="submit" class="btn btn-success">
                            <i class="bi bi-check-circle"></i> Gebruiker aanmaken
                        </button>
                    </div>
                </form>
            </div>
        </div>

        <div class="alert alert-info mt-4">
            <i class="bi bi-lightbulb"></i>
            <strong>Tip:</strong> De gebruiker ontvangt geen e-mail. Het account wordt direct geactiveerd en de gebruiker kan inloggen met het opgegeven wachtwoord.
        </div>
    </div>

    <div class="col-md-4 col-lg-6">
        <div class="card">
            <div class="card-header bg-info text-white">
                <h6 class="mb-0">
                    <i class="bi bi-info-circle"></i> Instructies
                </h6>
            </div>
            <div class="card-body">
                <h6>Wachtwoord vereisten:</h6>
                <ul class="mb-3">
                    <li>Minimaal 6 tekens lang</li>
                    <li>Moet overeenkomen met bevestiging</li>
                </ul>

                <h6>Rollen uitleg:</h6>
                <dl>
                    <dt><span class="badge bg-danger">Administrator</span></dt>
                    <dd>
                        Heeft volledige toegang tot:
                        <ul class="mb-2">
                            <li>Gebruikersbeheer</li>
                            <li>Alle klantlogs</li>
                            <li>Producten beheren</li>
                        </ul>
                    </dd>
                    
                    <dt><span class="badge bg-primary">Gebruiker</span></dt>
                    <dd>
                        Standaard toegang tot:
                        <ul class="mb-0">
                            <li>Eigen klantlogs</li>
                            <li>Producten bekijken</li>
                        </ul>
                    </dd>
                </dl>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
