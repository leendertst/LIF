@page
@model Lif.Pages.Producten.IndexModel
@{
    ViewData["Title"] = "Producten";
}

<div class="page-header mb-4">
    <h1><i class="bi bi-box-seam"></i> Producten</h1>
</div>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="bi bi-check-circle me-2"></i>
        @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<a class="btn btn-primary mb-3" asp-page="Create">
    <i class="bi bi-plus-circle"></i> Nieuw product
</a>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Naam</th>
            <th>Prijs</th>
            <th>Beschrijving</th>
            <th>Acties</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Producten)
        {
            <tr>
                <td>@item.Naam</td>
                <td>@item.Prijs.ToString("C")</td>
                <td>@item.Beschrijving</td>
                <td>
                    <a class="btn btn-sm btn-warning" asp-page="Edit" asp-route-id="@item.Id">Bewerken</a>
                    <a class="btn btn-sm btn-danger" asp-page="Delete" asp-route-id="@item.Id">Verwijderen</a>
                </td>
            </tr>
        }
    </tbody>
</table>
