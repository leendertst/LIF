@page
@model Lif.Pages.Producten.IndexModel
@{
    ViewData["Title"] = "Producten";
}

<div class="page-header mb-4">
    <h1><i class="bi bi-box-seam"></i> Producten</h1>
    @if (!Model.IsAdmin)
    {
        <p class="text-muted">
            <i class="bi bi-info-circle"></i> 
            Bekijk het productaanbod en voeg producten toe aan je klantlog.
        </p>
    }
</div>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="bi bi-check-circle me-2"></i>
        @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

@if (Model.IsAdmin)
{
    <a class="btn btn-primary mb-3" asp-page="Create">
        <i class="bi bi-plus-circle"></i> Nieuw product
    </a>
}

@if (Model.Producten.Any())
{
    <div class="card">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th><i class="bi bi-tag"></i> Naam</th>
                            <th><i class="bi bi-currency-euro"></i> Prijs</th>
                            <th><i class="bi bi-file-text"></i> Beschrijving</th>
                            @if (Model.IsAdmin)
                            {
                                <th class="text-center">Acties</th>
                            }
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Producten)
                        {
                            <tr>
                                <td>
                                    <strong>@item.Naam</strong>
                                </td>
                                <td>
                                    <span class="badge bg-success">@item.Prijs.ToString("C")</span>
                                </td>
                                <td>
                                    @if (!string.IsNullOrEmpty(item.Beschrijving))
                                    {
                                        <span>@item.Beschrijving</span>
                                    }
                                    else
                                    {
                                        <span class="text-muted">Geen beschrijving</span>
                                    }
                                </td>
                                @if (Model.IsAdmin)
                                {
                                    <td class="text-center">
                                        <div class="btn-group" role="group">
                                            <a class="btn btn-sm btn-warning" asp-page="Edit" asp-route-id="@item.Id" title="Bewerken">
                                                <i class="bi bi-pencil"></i>
                                            </a>
                                            <a class="btn btn-sm btn-danger" asp-page="Delete" asp-route-id="@item.Id" title="Verwijderen">
                                                <i class="bi bi-trash"></i>
                                            </a>
                                        </div>
                                    </td>
                                }
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            
            <div class="mt-3">
                <small class="text-muted">
                    <i class="bi bi-info-circle"></i> 
                    @Model.Producten.Count product(en) beschikbaar
                </small>
            </div>
        </div>
    </div>
}
else
{
    <div class="alert alert-info">
        <i class="bi bi-info-circle me-2"></i>
        Er zijn nog geen producten beschikbaar.
        @if (Model.IsAdmin)
        {
            <a asp-page="Create" class="alert-link">Maak het eerste product aan!</a>
        }
    </div>
}

@if (!Model.IsAdmin)
{
    <div class="alert alert-primary mt-4">
        <i class="bi bi-lightbulb me-2"></i>
        <strong>Tip:</strong> Je kunt deze producten toevoegen aan je klantlog via 
        <a asp-page="/Klantlogs/Index" class="alert-link">Mijn Klantlogs</a>.
    </div>
}
